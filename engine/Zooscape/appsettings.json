{
  "SignalR": {
    "Port": 5000
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore.SignalR": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "Application": "Zooscape"
    }
  },
    "GameSettings": {
        "WorldMap": "generate:51|6|0.0|0.5",
        "StartGameTimeout": 120,
        "TickDuration": 200,
        "MaxTicks": 2000,
        "TicksBetweenZookeeperRecalculate": 20,
        "NumberOfBots": 4,
        "CommandQueueSize": 10,
        "PointsPerPellet": 64,
        "ScoreLossPercentage": 10,
        "ScoreStreak": {
            "MultiplierGrowthFactor": 1.1,
            "Max": 4,
            "ResetGrace": 3
        },
        "Zookeepers": {
            "SpawnInterval": {
                "Mean": 250,
                "StdDev": 5,
                "Min": 225,
                "Max": 275
            },
            "Max": 4
        },
        "PelletRespawn": {
            "SpawnInterval": {
                "Mean": 100,
                "StdDev": 10,
                "Min": 50,
                "Max": 150
            }
        },
        "Obstacles": {
            "DistanceFromPlayers": 10,
            "DistanceFromPlayerSpawnPoints": 5,
            "DistanceFromOtherObstacles": 10,
            "SpawnInterval": {
                "Mean": 50,
                "StdDev": 7.5,
                "Min": 25,
                "Max": 75
            }
        },
        "PowerUps": {
            "DistanceFromPlayers": 10,
            "DistanceFromOtherPowerUps": 20,
            "SpawnInterval": {
                "Mean": 50,
                "StdDev": 7.5,
                "Min": 25,
                "Max": 75
            },
            "Types": {
                "PowerPellet": {
                    "RarityWeight": 10,
                    "Value": 10,
                    "Duration": 0
                },
                "ChameleonCloak": {
                    "RarityWeight": 6,
                    "Value": 0,
                    "Duration": 20
                },
                "Scavenger": {
                    "RarityWeight": 2,
                    "Value": 5,
                    "Duration": 5
                },
                "BigMooseJuice": {
                    "RarityWeight": 4,
                    "Value": 3,
                    "Duration": 5
                }
            }
        }
    },
  "GameLogsConfiguration": {
    "PushLogsToS3": true,
    "FullLogsEnabled": true,
    "DiffLogsEnabled": true
  }
}
