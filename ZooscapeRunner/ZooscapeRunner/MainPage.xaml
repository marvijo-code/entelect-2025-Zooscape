<Page
    x:Class="ZooscapeRunner.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZooscapeRunner"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:ZooscapeRunner.ViewModels"
    mc:Ignorable="d"
    Background="{StaticResource AppBackgroundBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            FontSize="36"
            FontWeight="Bold"
            Margin="0,0,0,32"
            Foreground="{StaticResource PrimaryTextBrush}"
            Text="ðŸ¦ Zooscape Runner" />

        <!--  Controls  -->
        <StackPanel
            Grid.Row="1"
            Margin="0,0,0,24"
            HorizontalAlignment="Center"
            Orientation="Vertical"
            Spacing="16">
            
            <!-- Bot Controls -->
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="12">
                <TextBlock Text="ðŸ¤– Bot Management:" VerticalAlignment="Center" FontWeight="SemiBold" 
                           Style="{StaticResource HeaderTextStyle}" Margin="0,0,12,0"/>
                <Button x:Name="ToggleBotsButton" Content="â–¶ï¸ Start All Bots" Command="{Binding StartAllCommand}" 
                        Style="{StaticResource SuccessButtonStyle}" />
                <Button x:Name="RestartAllButton" Content="ðŸ”„ Restart All Bots" Command="{Binding RestartAllCommand}"
                        Style="{StaticResource WarningButtonStyle}" />
            </StackPanel>
            
            <!-- Visualizer Controls -->
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="12">
                <TextBlock Text="ðŸ“Š Visualizer:" VerticalAlignment="Center" FontWeight="SemiBold" 
                           Style="{StaticResource HeaderTextStyle}" Margin="0,0,12,0"/>
                <Button x:Name="ToggleVisualizerButton" Content="â–¶ï¸ Start Visualizer" Command="{Binding StartVisualizerCommand}" 
                        Style="{StaticResource SuccessButtonStyle}" />
                <Button x:Name="OpenVisualizerButton" Content="ðŸŒ Open in Browser" Click="OpenVisualizerButton_Click"
                        Style="{StaticResource SecondaryButtonStyle}" />
            </StackPanel>
            
            <!-- Status Display -->
            <Border Background="{StaticResource SurfaceBackgroundBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="4" 
                    Padding="16,8" 
                    HorizontalAlignment="Center">
                <TextBlock
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource SecondaryTextBrush}"
                    Text="{Binding AutoRestartText}" />
            </Border>
        </StackPanel>

        <!--  Process List  -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,24">
            <ListView x:Name="ProcessListView" ItemsSource="{Binding Processes}" 
                      SelectionChanged="ProcessListView_SelectionChanged"
                      Background="Transparent"
                      BorderThickness="0">
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <Grid Padding="16,12" Background="{StaticResource SurfaceBackgroundBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="180" />
                                <ColumnDefinition Width="120" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource PrimaryTextBrush}"
                                Text="Process Name" />
                            <TextBlock
                                Grid.Column="1"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource PrimaryTextBrush}"
                                Text="Status" />
                            <TextBlock
                                Grid.Column="2"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource PrimaryTextBrush}"
                                Text="Actions" />
                        </Grid>
                    </DataTemplate>
                </ListView.HeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:ProcessViewModel">
                        <Grid Padding="16,12" Background="{StaticResource CardBackgroundBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="180" />
                                <ColumnDefinition Width="120" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Name}" VerticalAlignment="Center" 
                                       Style="{StaticResource PrimaryTextStyle}" />
                            <TextBlock Grid.Column="1" Text="{Binding Status}" VerticalAlignment="Center"
                                       Foreground="{StaticResource SecondaryTextBrush}" />
                            <Button Grid.Column="2" Content="ðŸ“‹ View Logs" 
                                    Click="ViewLogsButton_Click" Tag="{Binding}"
                                    Style="{StaticResource SecondaryButtonStyle}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <!--  Logs Section Header with Toggle  -->
        <Grid Grid.Row="3" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="ðŸ“‹ Process Logs" Style="{StaticResource HeaderTextStyle}" />
            <Button Grid.Column="1" x:Name="ToggleLogsButton" Content="ðŸ”½ Hide Logs" Click="ToggleLogsButton_Click"
                    Style="{StaticResource SecondaryButtonStyle}" />
        </Grid>

        <!--  Logs Viewer (Collapsible)  -->
        <Border Grid.Row="4" x:Name="LogsPanel" Style="{StaticResource CardStyle}">
            <Grid MaxHeight="250">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <!--  Logs Header  -->
                <Border Grid.Row="0" Background="{StaticResource SurfaceBackgroundBrush}" Padding="16,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="LogsHeaderText" Text="Select a process to view logs" 
                                   Style="{StaticResource PrimaryTextStyle}" />
                        <Button Grid.Column="1" Content="ðŸ—‘ï¸ Clear" Click="ClearLogsButton_Click" 
                                Style="{StaticResource SecondaryButtonStyle}" />
                    </Grid>
                </Border>
                
                <!--  Logs Content  -->
                <ScrollViewer Grid.Row="1" Padding="16" ZoomMode="Disabled" 
                              HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                              Background="{StaticResource AppBackgroundBrush}">
                    <RichTextBlock x:Name="LogsRichTextBlock" IsTextSelectionEnabled="True">
                        <Paragraph>
                            <Run x:Name="LogsTextRun" Text="No logs to display" />
                        </Paragraph>
                    </RichTextBlock>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>
