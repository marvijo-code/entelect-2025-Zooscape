<Page
    x:Class="ZooscapeRunner.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZooscapeRunner"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:ZooscapeRunner.ViewModels"
    mc:Ignorable="d"
    Background="{StaticResource AppBackgroundBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="300" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            FontSize="36"
            FontWeight="Bold"
            Margin="0,0,0,32"
            Foreground="{StaticResource PrimaryTextBrush}"
            Text="ðŸ¦ Zooscape Runner" />

        <!--  Controls  -->
        <StackPanel
            Grid.Row="1"
            Margin="0,0,0,24"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Spacing="12">
            <Button x:Name="StartAllButton" Content="â–¶ï¸ Start All" Command="{Binding StartAllCommand}" 
                    Style="{StaticResource SuccessButtonStyle}" />
            <Button x:Name="StopAllButton" Content="â¹ï¸ Stop All" Command="{Binding StopAllCommand}"
                    Style="{StaticResource ErrorButtonStyle}" />
            <Button x:Name="RestartAllButton" Content="ðŸ”„ Restart All" Command="{Binding RestartAllCommand}"
                    Style="{StaticResource WarningButtonStyle}" />
            <Border Background="{StaticResource SurfaceBackgroundBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="4" 
                    Padding="16,8" 
                    Margin="20,0,0,0">
                <TextBlock
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource SecondaryTextBrush}"
                    Text="{Binding AutoRestartText}" />
            </Border>
        </StackPanel>

        <!--  Process List  -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,24">
            <ListView x:Name="ProcessListView" ItemsSource="{Binding Processes}" 
                      SelectionChanged="ProcessListView_SelectionChanged"
                      Background="Transparent"
                      BorderThickness="0">
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <Grid Padding="16,12" Background="{StaticResource SurfaceBackgroundBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="180" />
                                <ColumnDefinition Width="120" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource PrimaryTextBrush}"
                                Text="Process Name" />
                            <TextBlock
                                Grid.Column="1"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource PrimaryTextBrush}"
                                Text="Status" />
                            <TextBlock
                                Grid.Column="2"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource PrimaryTextBrush}"
                                Text="Actions" />
                        </Grid>
                    </DataTemplate>
                </ListView.HeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:ProcessViewModel">
                        <Grid Padding="16,12" Background="{StaticResource CardBackgroundBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="180" />
                                <ColumnDefinition Width="120" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Name}" VerticalAlignment="Center" 
                                       Style="{StaticResource PrimaryTextStyle}" />
                            <TextBlock Grid.Column="1" Text="{Binding Status}" VerticalAlignment="Center"
                                       Foreground="{StaticResource SecondaryTextBrush}" />
                            <Button Grid.Column="2" Content="ðŸ“‹ View Logs" 
                                    Click="ViewLogsButton_Click" Tag="{Binding}"
                                    Style="{StaticResource SecondaryButtonStyle}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <!--  Logs Section Header  -->
        <TextBlock Grid.Row="3" Text="ðŸ“‹ Process Logs" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,12" />

        <!--  Logs Viewer  -->
        <Border Grid.Row="4" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <!--  Logs Header  -->
                <Border Grid.Row="0" Background="{StaticResource SurfaceBackgroundBrush}" Padding="16,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="LogsHeaderText" Text="Select a process to view logs" 
                                   Style="{StaticResource PrimaryTextStyle}" />
                        <Button Grid.Column="1" Content="ðŸ—‘ï¸ Clear" Click="ClearLogsButton_Click" 
                                Style="{StaticResource SecondaryButtonStyle}" />
                    </Grid>
                </Border>
                
                <!--  Logs Content  -->
                <ScrollViewer Grid.Row="1" Padding="16" ZoomMode="Disabled" 
                              HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                              Background="{StaticResource AppBackgroundBrush}">
                    <TextBlock x:Name="LogsTextBlock" Text="No logs to display" 
                               Style="{StaticResource LogTextStyle}" />
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>
